@model IEnumerable<ShoeInventoryApp.Models.PurchaseOrder>

@{
    ViewData["Title"] = "Purchase Orders";
}

<h1>Purchase Orders</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Order</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Order Date</th>
            <th>Supplier</th>
            <th>Total Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.Supplier.Name</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@order.Id">Details</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@order.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@order.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
