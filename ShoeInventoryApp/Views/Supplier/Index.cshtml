@model IEnumerable<ShoeInventoryApp.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<h1>Suppliers</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Supplier</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Supplier Name</th>
            <th>Contact Info</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model)
        {
            <tr>
                <td>@supplier.Name</td>
                <td>@supplier.ContactInfo</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@supplier.Id">Details</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@supplier.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@supplier.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
