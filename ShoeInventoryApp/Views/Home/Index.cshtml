@{
    ViewData["Title"] = "Dashboard";
    var data = ViewBag.DashboardData;
}

<!-- Hero Section -->
<div class="hero-section text-center fade-in-up">
    <div class="container">
        <h1 class="hero-title">
            <i class="fas fa-shoe-prints me-3"></i>
            AdoboWorldwide Shoe Shop
        </h1>
        <p class="hero-subtitle">
            Premium Footwear Inventory Management System
        </p>
        
        <!-- Dashboard Stats -->
        <div class="hero-stats">
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <div class="stat-card">
                        <div class="stat-number">@data.TotalShoes</div>
                        <div class="stat-label"><i class="fas fa-shoe-prints me-1"></i>Total Shoes</div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="stat-card">
                        <div class="stat-number">@data.TotalStock</div>
                        <div class="stat-label"><i class="fas fa-boxes me-1"></i>Total Stock</div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="stat-card">
                        <div class="stat-number">@data.TotalSuppliers</div>
                        <div class="stat-label"><i class="fas fa-truck me-1"></i>Suppliers</div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="stat-card">
                        <div class="stat-number">@data.TotalPurchaseOrders</div>
                        <div class="stat-label"><i class="fas fa-shopping-cart me-1"></i>Orders</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="quick-actions fade-in-up">
    <div class="container">
        <h3 class="mb-4"><i class="fas fa-rocket me-2"></i>Quick Actions</h3>
        <div class="row">
            <div class="col-lg-3 col-md-6 mb-3">
                <a href="@Url.Action("Create", "Shoe")" class="action-item">
                    <div class="action-icon">
                        <i class="fas fa-plus-circle"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">Add New Shoe</h5>
                        <p class="mb-0">Add a new shoe to inventory</p>
                    </div>
                </a>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <a href="@Url.Action("Create", "PurchaseOrder")" class="action-item">
                    <div class="action-icon">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">New Purchase Order</h5>
                        <p class="mb-0">Create a new purchase order</p>
                    </div>
                </a>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <a href="@Url.Action("Create", "Supplier")" class="action-item">
                    <div class="action-icon">
                        <i class="fas fa-truck"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">Add Supplier</h5>
                        <p class="mb-0">Register a new supplier</p>
                    </div>
                </a>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <a href="@Url.Action("Index", "ShoeColorVariation")" class="action-item">
                    <div class="action-icon">
                        <i class="fas fa-palette"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">Manage Stock</h5>
                        <p class="mb-0">Update color variations & stock</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <!-- Recent Shoes -->
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-shoe-prints me-2"></i>Recent Shoes
                </div>
                <div class="card-body">
                    @if (data.RecentShoes != null && data.RecentShoes.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Brand</th>
                                        <th>Price</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var shoe in data.RecentShoes)
                                    {
                                        <tr>
                                            <td><strong>@shoe.Name</strong></td>
                                            <td><span class="badge badge-primary">@shoe.Brand</span></td>
                                            <td>â‚±@shoe.Price.ToString("N2")</td>
                                            <td>
                                                <a href="@Url.Action("Details", "Shoe", new { id = shoe.Id })" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">
                            <i class="fas fa-shoe-prints fa-3x mb-3 d-block"></i>
                            No shoes found. <a href="@Url.Action("Create", "Shoe")">Add your first shoe</a>
                        </p>
                    }
                    <div class="text-center mt-3">
                        <a href="@Url.Action("Index", "Shoe")" class="btn btn-primary">
                            <i class="fas fa-list me-1"></i>View All Shoes
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Low Stock Alert -->
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-exclamation-triangle me-2"></i>Low Stock Alert 
                    @if (data.LowStockItems > 0)
                    {
                        <span class="badge badge-danger ms-2">@data.LowStockItems</span>
                    }
                </div>
                <div class="card-body">
                    @if (data.LowStockVariations != null && data.LowStockVariations.Count > 0)
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>@data.LowStockItems items</strong> are running low on stock (below 5 units).
                        </div>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Shoe</th>
                                        <th>Color</th>
                                        <th>Stock</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var variation in data.LowStockVariations)
                                    {
                                        <tr>
                                            <td>@variation.Shoe?.Name</td>
                                            <td>
                                                <span class="badge" style="background-color: @variation.Color.ToLower(); color: white;">@variation.Color</span>
                                            </td>
                                            <td>
                                                <span class="badge badge-danger">@variation.Stock</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle me-2"></i>
                            All items are well-stocked! Great job maintaining inventory levels.
                        </div>
                    }
                    <div class="text-center mt-3">
                        <a href="@Url.Action("Index", "ShoeColorVariation")" class="btn btn-warning">
                            <i class="fas fa-palette me-1"></i>Manage Stock
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Brands Chart -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-chart-bar me-2"></i>Top Brands
                </div>
                <div class="card-body">
                    @if (data.TopBrands != null && data.TopBrands.Count > 0)
                    {
                        <div class="row">
                            @foreach (var brand in data.TopBrands)
                            {
                                var percentage = data.TotalShoes > 0 ? (brand.Count * 100) / data.TotalShoes : 0;
                                <div class="col-lg col-md-6 mb-3">
                                    <div class="text-center">
                                        <h4 class="mb-1">@brand.Count</h4>
                                        <h5 class="text-muted mb-2">@brand.Brand</h5>
                                        <div class="progress" style="height: 8px;">
                                            <div class="progress-bar" role="progressbar" style="width: @percentage%" aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        <small class="text-muted">@percentage.ToString("F1")%</small>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">
                            <i class="fas fa-chart-bar fa-3x mb-3 d-block"></i>
                            No brand data available yet.
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
