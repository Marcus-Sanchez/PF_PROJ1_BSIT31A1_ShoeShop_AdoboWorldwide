@model ShoeInventoryApp.Models.PurchaseOrder

<h2>Delete Purchase Order</h2>

<p>Are you sure you want to delete this order?</p>

<dl class="row">
    <dt class="col-sm-2">Order Date</dt>
    <dd class="col-sm-10">@Model.OrderDate.ToShortDateString()</dd>

    <dt class="col-sm-2">Supplier</dt>
    <dd class="col-sm-10">@Model.SupplierId</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
